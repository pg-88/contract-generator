{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "index.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
